<?xml version="1.0" encoding="utf-8"?>
<com.lecloud.skin.ui.view.V4TopTitleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/letv_skin_v4_top_floatin_bg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/full_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingLeft="9dip"
        android:paddingRight="9dip"
        android:scaleType="centerInside"
        android:src="@drawable/letv_skin_v4_back_btn_selecter" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start">

        <TextView
            android:id="@+id/full_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="8dip">

        <ImageView
            android:id="@+id/full_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/letv_skin_v4_wifi_selecter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/full_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/full_net"
            android:src="@drawable/letv_skin_v4_battery_selecter"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/full_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_battery"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

</com.lecloud.skin.ui.view.V4TopTitleView>