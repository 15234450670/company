<?xml version="1.0" encoding="utf-8"?>
<com.lecloud.skin.ui.view.V4SmallLiveMediaControllerNew xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:letv="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/vnew_play_btn"
        android:background="@color/letv_skin_vnew_controller_background" />

    <!-- Fix width for compute left margin when move -->
    <TextView
        android:id="@+id/vnew_back_to_live"
        android:layout_width="120dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/vnew_play_btn"
        android:background="@drawable/letv_skin_v4_back_to_live"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="10dp"
        android:visibility="invisible" />

    <com.lecloud.skin.ui.view.V4LivePlayBtn
        android:id="@+id/vnew_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp" />

    <com.lecloud.skin.ui.view.V4ChgScreenBtn
        android:id="@+id/vnew_chg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:paddingBottom="10dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp" />

    <com.lecloud.skin.ui.view.V4LivePageSeekBar
        android:id="@+id/vnew_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/vnew_chg_btn"
        android:layout_toRightOf="@+id/vnew_play_btn"
        android:paddingRight="20dp"
        android:visibility="invisible"
        letv:v4PageSeekBar_textSize="10sp" />

</com.lecloud.skin.ui.view.V4SmallLiveMediaControllerNew>