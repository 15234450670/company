<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff3e3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/spacing_30"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="88dp"
            android:layout_height="@dimen/textsize44"
            android:gravity="center"
            style="@style/text_white_style_28"
            android:layout_marginLeft="@dimen/spacing_20"
            android:textColor="@color/white"
            android:background="@drawable/level_bg"
            android:text="" />

        <TextView
            android:id="@+id/examtime_tv"
            style="@style/text_black_style_28"
            android:layout_alignLeft="@+id/level_tv"
            android:layout_below="@+id/level_tv"
            android:padding="@dimen/spacing_15"
            android:text="考试时间: " />

        <TextView
            android:id="@+id/danwei_tv"
            style="@style/text_black_style_28"
            android:layout_alignLeft="@+id/level_tv"
            android:layout_below="@+id/examtime_tv"
            android:padding="@dimen/spacing_15"
            android:layout_toLeftOf="@+id/examresult_tv"
            android:text="" />

        <TextView
            android:id="@+id/kaoguan_tv"
            style="@style/text_black_style_28"
            android:layout_alignLeft="@+id/level_tv"
            android:layout_below="@+id/danwei_tv"
            android:padding="@dimen/spacing_15"
            android:text="考官: " />

        <TextView
            android:id="@+id/examresult_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:text=""
            android:gravity="center"
            android:background="@drawable/level_shape"
            android:layout_marginRight="@dimen/spacing_20"
            android:padding="@dimen/spacing_30"
            android:textColor="@color/yeelow_color"
            android:textSize="21sp"
            android:layout_alignTop="@+id/examtime_tv"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spitline_width"
        android:background="#f2d064"
        />
</LinearLayout>