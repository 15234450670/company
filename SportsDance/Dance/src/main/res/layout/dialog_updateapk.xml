<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_600"
        android:background="@drawable/updateapk_shape_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemone"
            style="@style/text_white_style_32"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_80"

            android:gravity="center"
            android:text="版本更新"
            android:textColor="#333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spitline_width"
            android:background="@color/black" />

        <TextView
            android:id="@+id/version_tv"
            style="@style/text_white_style_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_80"

            android:gravity="center"
            android:text=""
            android:textColor="#333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spitline_width"
            android:background="@color/black" />

        <!--        <TextView
            style="@style/text_white_style_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_30"
            android:layout_marginTop="@dimen/spacing_30"
            android:background="#ffffff"

            android:text="更新内容"
            android:textColor="#333333" />-->

        <TextView
            android:id="@+id/content_tv"
            style="@style/text_white_style_30"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:padding="@dimen/spacing_30"
            android:layout_weight="1"
            android:fadeScrollbars="true"
            android:gravity="left"
            android:text=""
            android:textColor="#333333" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spitline_width"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_112"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelbtn"
                style="@style/text_white_style_30"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_112"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black" />

            <View
                android:layout_width="@dimen/spitline_width"
                android:layout_height="@dimen/spacing_98"
                android:background="@color/black" />

            <TextView
                android:id="@+id/confirm_btn"
                style="@style/text_white_style_30"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_112"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下载"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>