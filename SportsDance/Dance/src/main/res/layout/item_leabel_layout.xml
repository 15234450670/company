<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/spacing_15">

    <ImageView
        android:id="@+id/iconmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/home_icon_002" />

    <TextView
        android:id="@+id/type_tv"
        style="@style/text_white_style_32"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/spacing_10"
        android:layout_marginLeft="@dimen/spacing_15"
        android:layout_marginTop="@dimen/spacing_10"
        android:layout_toRightOf="@id/iconmark"
        android:layout_weight="1"
        android:text="直播"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/spacing_25"
        android:src="@drawable/btn_bar_more_normal"
        android:visibility="invisible" />
</LinearLayout>