<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_bg_color"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_30">

    <ImageView
        android:id="@+id/headicon"
        android:layout_width="@dimen/spacing_76"
        android:layout_height="@dimen/spacing_76"
        android:src="@drawable/default_icon" />

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_8"
        android:layout_toLeftOf="@+id/head2icon"
        android:layout_toRightOf="@id/headicon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reply"
            style="@style/text_white_style_28"
            android:background="@drawable/rc_ic_bubble_left"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_70"
            android:text=""
            android:textColor="#000000" />
    </LinearLayout>

    <ImageView
        android:id="@+id/head2icon"
        android:layout_width="@dimen/spacing_76"
        android:layout_height="@dimen/spacing_76"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/left_layout"
        android:layout_marginLeft="@dimen/spacing_8"
        android:src="@drawable/default_icon" />

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/head2icon"
        android:layout_marginLeft="@dimen/spacing_8"
        android:layout_toLeftOf="@+id/head2icon"
        android:layout_toRightOf="@id/headicon"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/problem"
            style="@style/text_white_style_28"
            android:background="@drawable/rc_ic_bubble_no_right"
            android:gravity="center_vertical|right"
            android:minHeight="@dimen/spacing_70"
            android:text=""
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>