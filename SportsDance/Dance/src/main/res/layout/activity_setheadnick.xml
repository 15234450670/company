<?xml version="1.0" encoding="utf-8"?>
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg_color"
    android:paddingLeft="@dimen/spacing_20"
    android:paddingRight="@dimen/spacing_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="头像" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/headicon"
                    android:layout_width="@dimen/spacing_84"
                    android:layout_height="@dimen/spacing_84"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="昵称（必填）" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nick_tv"
                    style="@style/text_white_style_24"
                    android:textColorHint="@color/white"
                    android:layout_centerVertical="true"
                    android:hint="设置" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />


            </LinearLayout>
        </RelativeLayout>

        <TextView
            style="@style/text_white_style_22"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_160" />

        <TextView
            android:id="@+id/submit_btn"
            style="@style/text_white_style_36"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_80"
            android:layout_marginBottom="@dimen/spacing_50"
            android:layout_marginLeft="@dimen/spacing_30"
            android:layout_marginRight="@dimen/spacing_30"
            android:layout_marginTop="@dimen/spacing_20"
            android:background="@drawable/pwdsubmit_shape_bg"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="下一步" />
    </LinearLayout>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>