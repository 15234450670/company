<?xml version="1.0" encoding="utf-8"?>
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_bg_color"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/videoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:minHeight="@dimen/spacing_396" />
                <ImageView
                    android:id="@+id/video_bg"
                    android:layout_alignTop="@id/videoContainer"
                    android:layout_alignBottom="@id/videoContainer"
                    style="@style/text_white_style_34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:scaleType="fitXY" />

               <!-- <ImageView
                    android:id="@+id/play_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/home_icon_008" />-->
            </RelativeLayout>


            <TextView
                android:id="@+id/matchname_tv"
                style="@style/text_yellow_style_28"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_20"
                android:layout_marginRight="@dimen/spacing_20"
                android:layout_marginTop="@dimen/spacing_30"
                android:gravity="center_vertical"
                android:text="" />

            <TextView
                style="@style/text_yellow_style_28"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_20"
                android:layout_marginRight="@dimen/spacing_20"
                android:layout_marginTop="@dimen/spacing_35"
                android:gravity="center_vertical"
                android:text="预报赛程" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_20"
                    android:layout_marginRight="@dimen/spacing_20"
                    android:layout_marginTop="@dimen/spacing_35"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:text="比赛时间: " />

                    <TextView
                        android:id="@+id/matchtime_tv"
                        style="@style/text_white_style_28"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_20"
                    android:layout_marginRight="@dimen/spacing_20"
                    android:layout_marginTop="@dimen/spacing_35"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:text="报名时间: " />

                    <TextView
                        android:id="@+id/signup_tv"
                        style="@style/text_white_style_28"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_20"
                    android:layout_marginRight="@dimen/spacing_20"
                    android:layout_marginTop="@dimen/spacing_35"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:text="参赛地点: " />

                    <TextView
                        android:id="@+id/address_tv"
                        style="@style/text_white_style_28"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:text="" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/text_white_style_34"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/spacing_45"
                android:gravity="center"
                android:text="赛事资料" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spitline_width"
                android:layout_marginTop="@dimen/spacing_30"
                android:background="#3b2788" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_20"
                android:layout_marginRight="@dimen/spacing_20"
                android:layout_marginTop="@dimen/spacing_20"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_24"
                android:paddingTop="@dimen/spacing_24">

                <LinearLayout
                    android:id="@+id/score_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_24"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mathc_icon_001" />

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/spacing_18"
                        android:gravity="center_vertical"
                        android:text="成绩查询" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/guize_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mathc_icon_003" />

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/spacing_18"
                        android:gravity="center_vertical"
                        android:text="竞赛规则" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shexiang_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_24"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mathc_icon_004" />

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/spacing_18"
                        android:gravity="center_vertical"
                        android:text="竞赛设项" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_20"
                android:layout_marginRight="@dimen/spacing_20"
                android:layout_marginTop="@dimen/spacing_20"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_24"
                android:paddingTop="@dimen/spacing_24">

                <LinearLayout
                    android:id="@+id/saicheng_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_24"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mathc_icon_006" />

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/spacing_18"
                        android:gravity="center_vertical"
                        android:text="赛程表" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/matchvideo_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mathc_icon_002" />

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/spacing_18"
                        android:gravity="center_vertical"
                        android:text="比赛视频" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wonderfulpic_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_24"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mathc_icon_005" />

                    <TextView
                        style="@style/text_white_style_28"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/spacing_18"
                        android:gravity="center_vertical"
                        android:text="精彩图片" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_30" />
        </LinearLayout>
    </ScrollView>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>