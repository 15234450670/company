<?xml version="1.0" encoding="utf-8"?>
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg_color"
    android:paddingLeft="@dimen/spacing_20"
    android:paddingRight="@dimen/spacing_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <ImageView
                android:id="@+id/headicon"
                android:layout_width="@dimen/spacing_84"
                android:layout_height="@dimen/spacing_84"
                android:layout_centerVertical="true"
                android:src="@drawable/default_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_white_style_24"
                    android:layout_centerVertical="true"
                    android:text="设置" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="姓名" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/text_white_style_24"

                    android:layout_centerVertical="true"
                    android:text="" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sex_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="性别" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sex_tv"
                    style="@style/text_white_style_24"
                    android:layout_centerVertical="true"
                    android:text="" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="身份证号" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_tv"
                    style="@style/text_white_style_24"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />


            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/nick_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="昵称" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nick_tv"
                    style="@style/text_white_style_24"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mobile_layout"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="绑定手机" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_tv"
                    style="@style/text_white_style_24"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>