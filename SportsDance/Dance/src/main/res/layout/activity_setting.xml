<?xml version="1.0" encoding="utf-8"?>
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg_color"
    android:paddingLeft="@dimen/spacing_20"
    android:paddingRight="@dimen/spacing_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/clear_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="清理缓存" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updatepwd_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_100"
            android:layout_marginBottom="@dimen/spacing_20"
            android:background="@drawable/mine_shape_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/spacing_20"
            android:paddingRight="@dimen/spacing_20">

            <TextView
                style="@style/text_white_style_28"
                android:layout_centerVertical="true"
                android:text="修改密码" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_shape_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_40"

                    android:src="@drawable/mine_icon_0010" />


            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/vername_tv"
            style="@style/text_white_style_24"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="V1.0.0" />

        <TextView

            style="@style/text_white_style_36"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_80"
            android:layout_marginBottom="@dimen/spacing_50"
            android:layout_marginLeft="@dimen/spacing_50"
            android:layout_marginRight="@dimen/spacing_50"
            android:clickable="true"
            android:onClick="toQuit"
            android:layout_marginTop="@dimen/spacing_30"
            android:background="@drawable/mine_shape_bg"
            android:gravity="center"
            android:text="退出" />
    </LinearLayout>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>