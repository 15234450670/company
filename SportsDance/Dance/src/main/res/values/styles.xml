        <item name="android:textSize">@dimen/textsize20</item>
        <item name="android:textColor">#eaeaea</item>
    </style>

    <style name="text_yellow_style_28" parent="text_style">
        <item name="android:textSize">@dimen/textsize28</item>
        <item name="android:textColor">#fddb81</item>
    </style>
    <style name="text_yellow_style_32" parent="text_style">
        <item name="android:textSize">@dimen/textsize32</item>
        <item name="android:textColor">#fddb81</item>
    </style>
    <style name="text_yellow_style_30" parent="text_style">
        <item name="android:textSize">@dimen/textsize30</item>
